{
    "name": "drewlabs/auth-http-guard",
    "description": "This package provide implementation of an authentication guard that use http connection to query for authenticated user from a remote source",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\AuthHttpGuard\\": "src/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3|^7.4|^8.0|^8.1",
        "drewlabs/contracts": "^1.0|^2.5",
        "drewlabs/core-helpers": "^1.0|^2.3",
        "drewlabs/http-client": "^1.0",
        "illuminate/contracts": "^6.0|^7.0|^8.0|^9.0",
        "illuminate/support": "^6.0|^7.0|^8.0|^9.0"
    },
    "repositories":[
        {
            "type": "vcs",
            "url": "git@github.com:liksoft/drewlabs-php-contracts.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:liksoft/drewlabs-php-core-helpers.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:liksoft/drewlabs-php-http-client.git"
        }
    ],    
    "suggest": {
        "predis/predis": "Required to use the redis cache provider.",
        "ext/memcached": "Required to use the memcached provider.",
        "drewlabs/net": "Required to ping available servers ^0.1.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Drewlabs\\AuthHttpGuard\\ServiceProvider"
            ]
        }
    }
}
